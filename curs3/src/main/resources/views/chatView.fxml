<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>


<VBox  alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.scs.map.controllers.MessageController">
    <ListView fx:id="messagesList" prefHeight="400.0" prefWidth="600.0"/>
    <HBox spacing="10">
        <TextField fx:id="messageTextField" promptText="Type a message..." />
        <Button fx:id="buttonSendMessage" onAction="#handleSendMessage" text="Send" />
    </HBox>
</VBox>