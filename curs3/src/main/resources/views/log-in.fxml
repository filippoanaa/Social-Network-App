<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" styleClass="root" stylesheets="/style/authentication.css" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.scs.map.controllers.LogInController">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
    <Text id="loginLabel" styleClass="login-title" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <Label styleClass="input-label" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="usernameText" styleClass="input-field" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Label styleClass="input-label" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordText" styleClass="input-field" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <HBox alignment="center" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="3">
        <Button id="logInButton" onAction="#handleLogInButton" prefHeight="25.0" prefWidth="149.0" styleClass="login-button" text="Log in" />
    </HBox>
   <Hyperlink onAction="#handleSignUp" prefHeight="23.0" prefWidth="100.0" text="Sign up" GridPane.columnIndex="2" GridPane.rowIndex="4" />
   <Label text="Don't have an account?" GridPane.rowIndex="4" />
    <Label fx:id="messageToUser"
           prefHeight="50.0"
           prefWidth="200.0"
           styleClass="error-message"
           wrapText="true"
           GridPane.columnIndex="0"
           GridPane.columnSpan="3"
           GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
